{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "lib": [
            "es2018",
            "esnext.asynciterable",
            "ESNext"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules, dist"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}